#!/usr/bin/python3

import os
import sys
import http.server
import socketserver

if __name__ == "__main__":
    handler = http.server.SimpleHTTPRequestHandler

    if len(sys.argv) > 1:
        port = int(sys.argv[1])
    else:
        port = 8080

    os.chdir("./www")
    server = socketserver.TCPServer(("", port), handler)

    server.serve_forever()
